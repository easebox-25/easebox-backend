{
  "name": "easebox-backend",
  "version": "1.0.0",
  "description": "A dispatch ride hailing application that helps connects individuals and business owners with delivery services",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env.development src/app.ts",
    "dev:prod": "tsx --watch --env-file .env.production src/app.ts",
    "start": "node dist/app.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --env-file .env.development ./node_modules/drizzle-kit/bin.cjs migrate",
    "db:migrate:prod": "node --env-file .env.production ./node_modules/drizzle-kit/bin.cjs migrate",
    "db:push": "node --env-file .env.development ./node_modules/drizzle-kit/bin.cjs push",
    "db:studio": "node --env-file .env.development ./node_modules/drizzle-kit/bin.cjs studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SarkiMudboy/easebox-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SarkiMudboy/easebox-backend/issues"
  },
  "homepage": "https://github.com/SarkiMudboy/easebox-backend#readme",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.5",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "imports": {
    "#*": "./src/*"
  }
}
